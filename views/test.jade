extends layout
  
block content
  section.insert
    h3 Insert Data
    form(action="/insert", method="post")
        div.input
          label(for="name") Name: 
          input(type="text", id="name", name="name")
        div.input
          label(for="content") Content: 
          input(type="text", id="content", name="content")
        div.input
          label(for="store") Store: 
          input(type="text", id="store", name="store")
          
        button(type="submit") INSERT 
  section.get
    h3 Get data
    div
      .row
        for item in items
          .col-md-3
            article.item
              div Name: #{item.name}
              div Content: #{item.content}
              div Store: #{item.store}
              br
              div 
                a(href="deletebtn/#{item._id}") DELETE
  section.delete
    h3 Delete data
    form(action="/delete", method="post")
      div.input
        label(for="id") ID: 
        input(type="text", id="id", name="id")
        button(type="submit") Delete
  
  section.update
      h3 Update Data
      form(action="/update", method="post")
          div.input
            label(for="id") ID: 
            input(type="text", id="id", name="id")  
          div.input
            label(for="name") name: 
            input(type="text", id="name", name="name")
          div.input
            label(for="content") Content: 
            input(type="text", id="content", name="content")
          div.input
            label(for="store") store: 
            input(type="text", id="store", name="store")
            
          button(type="submit") UPDATE 
